<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Noundry.Authnz</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>Noundry</Authors>
    <Description>Modern OAuth 2.0 abstraction library for ASP.NET Core with Razor Pages support and multiple identity providers (Google, Microsoft, GitHub, Apple, Facebook, Twitter)</Description>
    <PackageTags>oauth;authentication;authorization;security;aspnetcore;taghelpers;razorpages;modern</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/noundry/Authnz</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>