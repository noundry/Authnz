@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow-md rounded-lg p-6">
        <h1 class="text-3xl font-bold text-red-600 mb-4">Error</h1>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p class="text-gray-600 mb-4">
                <strong>Request ID:</strong> <code class="bg-gray-100 px-2 py-1 rounded">@Model.RequestId</code>
            </p>
        }

        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <h3 class="text-lg font-medium text-gray-800 mb-2">Common OAuth Issues:</h3>
            <ul class="list-disc list-inside text-gray-600 space-y-1">
                <li>Check that your OAuth provider credentials are configured correctly</li>
                <li>Verify redirect URIs match exactly in your OAuth app settings</li>
                <li>Ensure your application is running on HTTPS in production</li>
                <li>Check that required scopes are approved for your OAuth application</li>
            </ul>
        </div>

        <div class="flex space-x-4">
            <a href="/" class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded transition-colors">
                Go Home
            </a>
            <a href="/Privacy" class="bg-gray-600 text-white hover:bg-gray-700 px-4 py-2 rounded transition-colors">
                Privacy Policy
            </a>
        </div>
    </div>
</div>