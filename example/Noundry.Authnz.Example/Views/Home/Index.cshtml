@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to Noundry OAuth Example</h1>
    
    <div class="max-w-md mx-auto">
        <noundry-oauth-status show-when-authenticated="false">
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-2xl font-semibold text-gray-800 mb-6">Sign in to continue</h2>
                <div class="space-y-3">
                    <noundry-oauth-login show-all="true"></noundry-oauth-login>
                </div>
            </div>
        </noundry-oauth-status>

        <noundry-oauth-status show-when-anonymous="false">
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Welcome back!</h2>
                <noundry-oauth-status show-avatar="true" show-name="true" show-email="true" user-class="mb-4"></noundry-oauth-status>
                <div class="space-y-3">
                    <a href="/Home/Dashboard" class="block bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded transition-colors">
                        Go to Dashboard
                    </a>
                </div>
            </div>
        </noundry-oauth-status>
    </div>

    <div class="mt-12 max-w-4xl mx-auto">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Supported OAuth Providers</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            <div class="bg-white p-4 rounded-lg shadow text-center">
                <i class="fab fa-google text-2xl text-red-500 mb-2"></i>
                <p class="text-sm font-medium">Google</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow text-center">
                <i class="fab fa-microsoft text-2xl text-blue-500 mb-2"></i>
                <p class="text-sm font-medium">Microsoft</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow text-center">
                <i class="fab fa-github text-2xl text-gray-800 mb-2"></i>
                <p class="text-sm font-medium">GitHub</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow text-center">
                <i class="fab fa-apple text-2xl text-gray-700 mb-2"></i>
                <p class="text-sm font-medium">Apple</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow text-center">
                <i class="fab fa-facebook text-2xl text-blue-600 mb-2"></i>
                <p class="text-sm font-medium">Facebook</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow text-center">
                <i class="fab fa-twitter text-2xl text-blue-400 mb-2"></i>
                <p class="text-sm font-medium">Twitter</p>
            </div>
        </div>
    </div>
</div>